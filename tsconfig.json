{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noEmit": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./backend/src/*"],
      "@extensions/*": ["./extensions/*"]
    },
    "types": [
      "@shopify/ui-extensions",
      "@types/node"
    ]
  },
  "include": [
    "backend/src/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules",
    "backend/dist",
    "extensions/**/node_modules",
    "extensions/**/dist"
  ]
}