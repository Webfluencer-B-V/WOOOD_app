{
  "name": "woood-delivery-date-picker",
  "version": "1.0.0",
  "description": "WOOOD Delivery Date Picker - Standalone Shopify Checkout Extension with backend API proxy",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "yarn install:backend && yarn build:backend && yarn build:extensions",
    "install:backend": "cd backend && yarn install",
    "build:backend": "cd backend && yarn build",
    "build:extensions": "cd extensions/date-picker && npm run build && cd ../shipping-method && npm run build",
    "build:date-picker": "cd extensions/date-picker && npm run build",
    "build:shipping-method": "cd extensions/shipping-method && npm run build",
    "dev:backend": "cd backend && yarn dev",
    "dev:extensions": "yarn shopify:dev",
    "test": "yarn test:backend && yarn test:extensions",
    "test:backend": "cd backend && yarn test",
    "test:extensions": "cd extensions/shipping-method && npm test",
    "type-check": "yarn type-check:backend && yarn type-check:extensions",
    "type-check:backend": "cd backend && yarn build",
    "type-check:extensions": "cd extensions/date-picker && npm run type-check",
    "clean": "yarn clean:backend && yarn clean:extensions",
    "clean:backend": "cd backend && rm -rf dist",
    "clean:extensions": "cd extensions/date-picker && npm run clean && cd ../shipping-method && rm -rf dist generated",
    "shopify": "shopify",
    "shopify:config:use:development": "shopify app config use shopify.app.development.toml",
    "shopify:config:use:production": "shopify app config use shopify.app.toml",
    "shopify:dev": "yarn shopify:config:use:development && shopify app dev --no-update",
    "shopify:deploy:development": "yarn shopify:config:use:development && shopify app deploy",
    "shopify:deploy:production": "yarn shopify:config:use:production && shopify app deploy",
    "shopify:deploy": "yarn shopify:deploy:production",
    "shopify:info": "shopify app info"
  },
  "dependencies": {
    "@shopify/app-bridge-react": "^4.1.5",
    "@shopify/polaris": "^13.8.0",
    "@shopify/polaris-icons": "^9.3.0",
    "@shopify/ui-extensions": "2025.4.x",
    "@shopify/ui-extensions-react": "^2025.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.58.2",
    "@shopify/app-bridge-types": "^0.0.15",
    "@shopify/cli": "^3.81.2",
    "@types/node": "^20.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}