{
  "name": "woood-delivery-date-picker",
  "version": "1.0.0",
  "description": "Standalone Shopify Checkout Extension with delivery date picker and shipping method customization for WOOOD",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build:all": "yarn build:backend && yarn build:date-picker && yarn build:shipping-method",
    "build": "yarn build:all",
    "build:backend": "cd backend && yarn build",
    "build:date-picker": "cd extensions/date-picker && yarn build",
    "build:shipping-method": "cd extensions/shipping-method && yarn build",
    "dev:backend": "cd backend && yarn dev",
    "dev:extensions": "yarn shopify:dev",
    "test:all": "yarn test:backend && yarn test:extensions",
    "test": "yarn test:all",
    "test:backend": "cd backend && yarn test",
    "test:extensions": "cd extensions/shipping-method && yarn test",
    "test:deployment": "yarn test:backend && curl -f https://your-backend.vercel.app/health",
    "type-check:all": "yarn type-check:backend && yarn type-check:extensions",
    "type-check": "yarn type-check:all",
    "type-check:backend": "cd backend && yarn build",
    "type-check:extensions": "cd extensions/date-picker && yarn type-check && cd ../shipping-method && yarn type-check",
    "clean:all": "yarn clean:backend && yarn clean:extensions",
    "clean": "yarn clean:all",
    "clean:backend": "cd backend && rm -rf dist",
    "clean:extensions": "cd extensions/date-picker && yarn clean && cd ../shipping-method && yarn clean",
    "shopify": "shopify",
    "shopify:config:use:development": "shopify app config use shopify.app.development.toml",
    "shopify:config:use:production": "shopify app config use shopify.app.toml",
    "shopify:dev": "yarn shopify:config:use:development && shopify app dev --no-update",
    "shopify:deploy:development": "yarn shopify:config:use:development && shopify app deploy",
    "shopify:deploy:production": "yarn shopify:config:use:production && shopify app deploy",
    "shopify:deploy": "yarn shopify:deploy:production",
    "shopify:info": "shopify app info",
    "deploy": "yarn build:all && cd backend && vercel --prod && cd .. && yarn shopify:deploy",
    "install:all": "yarn install && cd backend && yarn install && cd ../extensions/date-picker && yarn install && cd ../shipping-method && yarn install"
  },
  "dependencies": {
    "@shopify/ui-extensions": "2025.4.x",
    "@shopify/ui-extensions-react": "^2025.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.58.2",
    "@shopify/cli": "^3.81.2",
    "@types/node": "^20.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}